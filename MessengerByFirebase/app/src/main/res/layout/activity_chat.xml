<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#99673AB7"
        android:padding="16dp"
        tools:text="John Week"/>
    
    <View
        android:id="@+id/statusView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
        app:layout_constraintRight_toRightOf="@id/textViewTitle"
        app:layout_constraintTop_toTopOf="@id/textViewTitle"
        android:background="@drawable/circle_green"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTyping"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        tools:listitem="@layout/my_message_item" />

    <EditText
        android:id="@+id/editTextTyping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:hint="Type here you message"
        android:padding="18dp" />

    <ImageView
        android:id="@+id/imageViewSendMessage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@android:drawable/ic_menu_send"
        app:tint="#673AB7"
        android:inputType = "textMultiLine"
        app:layout_constraintBottom_toBottomOf="@id/editTextTyping"
        app:layout_constraintEnd_toEndOf="@id/editTextTyping"
        app:layout_constraintTop_toTopOf="@id/editTextTyping"/>


</androidx.constraintlayout.widget.ConstraintLayout>